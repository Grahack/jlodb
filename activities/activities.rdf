<?xml version="1.0"?>
<rdf:RDF xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:dct="http://purl.org/dc/terms/">

    <rdf:Description rdf:about="urn:activity:alchemist">
        <dct:title xml:lang="fr-FR">L'alchimiste</dct:title>
        <dct:abstract xml:lang="fr-FR">L'alchimiste est un jeu de logique dans lequel le joueur doit combiner des éléments de même type afin de les transmutter en un élément de qualité supérieure.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Positionner 3 éléments de même type côte-à-côte pour les transmuter en un élément de qualité supérieure." ]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:asm">
        <dct:title xml:lang="fr-FR">Assembleur</dct:title>
        <dct:abstract xml:lang="fr-FR">Jeu de programmation en assembleur</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"poufpouf"]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:correcter">
        <dct:title xml:lang="fr-FR">Le correcteur</dct:title>
        <dct:abstract xml:lang="fr-FR">L'activité demande de corriger le texte proposé en remplaçant les mots erronés ou manquants.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["default1":"Cliquer sur les mots erronés ou manquants et choisir la bonne réponse depuis le menu contextuel.", "default2": "Soumettre ensuite la correction en cliquant sur le bouton de validation." ]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:geometry">
        <dct:title xml:lang="en-US">Geometry</dct:title>
        <dct:title xml:lang="fr-FR">Géometrie</dct:title>
        <dct:abstract xml:lang="fr-FR">L'activité de géométrie offre un certain nombre de fonctionnalités permettant de réaliser les différentes figures demandées par l'énoncé.</dct:abstract>
        <dct:description xml:lang="en-US"><![CDATA[]]></dct:description>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Tracer dans la zone de travail les différentes figures demandées par l'énoncé."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:marker">
        <dct:title xml:lang="fr-FR">Marqueur</dct:title>
        <dct:abstract xml:lang="fr-FR">En fonction de l'énoncé, certaines parties d'un texte doivent être surlignées de la couleur adéquate.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Sélectionner une couleur dans la partie inférieure de la fenêtre et surligner les zones adéquates du texte."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:mcq">
        <dct:title xml:lang="fr-FR">Questions à choix multiples</dct:title>
        <dct:abstract xml:lang="fr-FR">Répondez aux questions en sélectionnant la ou les réponses valides parmi celles proposées.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Sélectionner la ou les bonnes réponses, puis passer à la question suivante en cliquant sur le bouton 'valider'."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:memory">
        <dct:title xml:lang="fr-FR">Jeu de mémoire</dct:title>
        <dct:abstract xml:lang="fr-FR">Jeu de mémoire où le joueur doit retrouver des nombres cachés après que ces derniers aient été brièvement exposés.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["explanation":"Une fois les chiffres disparus, cliquer sur leur emplacement pour les faire apparaître, du plus petit au plus grand.","number_l":"Nombre de chiffres","exposure_l":"Durée d'exposition", "error_l":"Nombre d'erreur(s)"]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:memory2">
        <dct:title xml:lang="fr-FR">Jeu de mémoire</dct:title>
        <dct:abstract xml:lang="fr-FR">Jeu de mémoire où le joueur doit retrouver une séquence après que celle ait été jouée une première fois.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["explanation":"Rejouer la séquence proposée."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:operation">
        <dct:title xml:lang="en-US">Mathematical operations</dct:title>
        <dct:title xml:lang="fr-FR">Opérations mathématiques</dct:title>
        <dct:abstract xml:lang="en-US">The purpose of the activity is to solve some mathematical operations.</dct:abstract>
        <dct:abstract xml:lang="fr-FR">Résolvez des opérations mathématiques élémentaires (addition, soustraction, multiplication et division).</dct:abstract>
        <dct:description xml:lang="en-US"><![CDATA["guide":"TO DO"]]></dct:description>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Poser l'opération et donner le bon résultat."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:puzzle">
        <dct:title xml:lang="fr-FR">Puzzle</dct:title>
        <dct:abstract xml:lang="fr-FR">Posez les pièces du puzzle au bon endroit.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Faire glisser les pièces au bon endroit, reconstituer le puzzle et valider en appuyant sur le bouton en bas à gauche."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:robot">
        <dct:title xml:lang="fr-FR">Robot</dct:title>
        <dct:abstract xml:lang="fr-FR">Programmez un ou plusieurs robots afin d'accomplir la tâche demandée.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["legend":["Choix du robot","Icône d'action","Ascenseur","Code source","Fonction principale","Fonction F1","Fonction F2"],"guide":"Diriger un ou plusieurs robot vers leur case d'arrivée respective. Utiliser les actions proposées dans le code source en les faisant glisser vers les différentes fonctions. Enfin, lancer le programme grâce au bouton de lecture situé en bas à droite."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:sequence">
        <dct:title xml:lang="en-US">Quizz sequence</dct:title>
        <dct:title xml:lang="fr-FR">Séquence de questions</dct:title>
        <dct:abstract xml:lang="en-US">The 'sequence' activity is a kind of quizz in which the player attempt to answer questions correctly and quickly.</dct:abstract>
        <dct:abstract xml:lang="fr-FR">Répondez juste et le plus rapidement possible à une série de questions.</dct:abstract>
        <dct:description xml:lang="en-US"><![CDATA["guide_keypad":"Answer quickly to the questions by using the keypad.","guide_svg":"TO DO","guide_template":"TO DO"]]></dct:description>
        <dct:description xml:lang="fr-FR"><![CDATA["guide_keypad":"Donner, le plus rapidement possible, les valeurs correspondantes aux problèmes proposés en utilisant le clavier numérique.","guide_svg":"Cliquer, le plus rapidement possible, sur les éléments de réponse correspondants aux questions proposées.","guide_template":"Cliquer, le plus rapidement possible, sur les éléments de réponse correspondants aux questions proposées."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:sokoban">
        <dct:title xml:lang="fr-FR">Sokoban</dct:title>
        <dct:abstract xml:lang="fr-FR">Jeu classique du sokoban où l'on doit déplacer, grâce à un ou plusieurs robots, différentes boites vers leur zone de livraison.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Aider, à l'aide des flèches directionnelles, le ou les robots à déplacer les différents cartons vers leur aire de livraison.","lmoves":"mouvements","lpushes":"poussées"]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:sorting">
        <dct:title xml:lang="en-US">Sorting</dct:title>
        <dct:title xml:lang="fr-FR">Triage</dct:title>
        <dct:abstract xml:lang="en-US">Sorting ask to sort different elements.</dct:abstract>
        <dct:abstract xml:lang="fr-FR">Triez toute sorte de choses.</dct:abstract>
        <dct:description xml:lang="en-US"><![CDATA[]]></dct:description>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Classer les éléments dans l'ordre demandé par l'exercice et valider l'opération en cliquant sur le bouton de validation."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:sudoku">
        <dct:title xml:lang="fr-FR">Sudoku</dct:title>
        <dct:abstract xml:lang="fr-FR">Jeu de logique où le joueur doit combiner des nombres de 1 à 9 de façon à ce que chaque colonne, chaque ligne et chaque sous ensemble 3x3 ne contiennent pas de doublon.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Remplir chaque case de la grille de façon à ce que chaque colonne, chaque ligne et chaque sous ensemble 3x3 contiennent tous les chiffres de 1 à 9, sans doublons.","penguide":"Le <b>mode remplissage</b> permet de remplir la grille de Sudoku.","pencilguide":"Le <b>mode brouillon</b> divise chaque case en 9 sous-cases permettant ainsi de noter les différents candidats."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:toggleswitch">
        <dct:title xml:lang="en-US">Toggle switch</dct:title>
        <dct:title xml:lang="fr-FR">L'interrupteur à bascule</dct:title>
        <dct:abstract xml:lang="en-US">TODO.</dct:abstract>
        <dct:abstract xml:lang="fr-FR">Cliquer sur les objets dynamiques et changer leur état de façon à correspondre à la configuration demandée.</dct:abstract>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Cliquer sur les objets dynamiques et changer leur état de façon à correspondre à la configuration demandée."]]></dct:description>
    </rdf:Description>

    <rdf:Description rdf:about="urn:activity:where">
        <dct:title xml:lang="en-US">Move objects to the right location</dct:title>
        <dct:title xml:lang="fr-FR">Déplacement</dct:title>
        <dct:abstract xml:lang="en-US">TODO.</dct:abstract>
        <dct:abstract xml:lang="fr-FR">Déplacez le ou les éléments dynamiques au plus près de l'emplacement demandé.</dct:abstract>
        <dct:description xml:lang="en-US"><![CDATA["guide":"TO DO"]]></dct:description>
        <dct:description xml:lang="fr-FR"><![CDATA["guide":"Déplacer l'élément dynamique au plus près de l'emplacement demandé. Cliquer ensuite sur l'énoncé, situé en-haut de la fenêtre, pour valider la proposition."]]></dct:description>
    </rdf:Description>

</rdf:RDF>

